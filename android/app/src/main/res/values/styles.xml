<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:colorBackground">@color/windowBackgroundColor</item>
    <item name="android:colorForeground">@color/textColor1</item>
    <item name="android:textColorPrimary">@color/textColor1</item>
    <item name="android:textColorPrimaryInverse">@color/textColor3</item>
    <item name="android:textColorSecondary">@color/textColor2</item>
  </style>

  <style name="ToolbarSubtitleAppearance"
         parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
    <item name="android:textSize">12sp</item>
  </style>

</resources>
