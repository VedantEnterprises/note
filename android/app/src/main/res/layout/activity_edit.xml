<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:elevation="1dp"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize"
    app:subtitleTextAppearance="@style/ToolbarSubtitleAppearance"
    app:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:titleTextAppearance="@style/ToolbarTitleAppearance"/>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
      android:id="@+id/backgroundListView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:divider="@null"
      android:dividerHeight="0px"/>

    <xyz.hanks.note.ui.widget.draglist.DragSortListView
      android:id="@+id/backListView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:divider="@null"
      android:dividerHeight="0px"
      android:padding="3dp"
      android:scrollbars="none"
      android:visibility="gone"
      app:collapsed_height="0dp"
      app:drag_enabled="false"
      app:drag_scroll_start="0.33"
      app:float_alpha="1"
      app:max_drag_scroll_speed="0.5"
      app:slide_shuffle_speed="0.3"
      app:track_drag_sort="false"
      app:use_default_controller="true"/>

    <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView
      android:id="@+id/listView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:divider="@null"
      android:dividerHeight="0px"
      android:scrollbars="none"/>

  </FrameLayout>

</LinearLayout>